<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_selected_style"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/video_content_img"
        android:layout_width="@dimen/video_content_image_width"
        android:layout_height="@dimen/video_content_image_height"
        android:layout_marginBottom="@dimen/video_content_image_marginBottom"
        android:layout_marginLeft="@dimen/video_content_image_marginLeft"
        android:layout_marginRight="@dimen/video_content_image_marginRight"
        android:layout_marginTop="@dimen/video_content_image_marginTop"
        android:background="@drawable/img_bg"
        android:scaleType="fitXY" >
    </ImageView>

    <LinearLayout
        
        
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" 
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/video_content_cn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@drawable/black_white_textcolor_style"
            android:textSize="@dimen/video_content_cn_title_textSize"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/video_content_e_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@drawable/black_white_textcolor_style"
            android:textSize="@dimen/video_content_e_title_textSize"
            android:textStyle="bold" >
        </TextView>

        <!-- 上映时间 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="上映时间: "
                android:textColor="@drawable/black_white_textcolor_style"
                android:textSize="@dimen/video_content_explan_title_textSize" />

            <TextView
                android:id="@+id/video_content_addTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@drawable/gray_white_textcolor_style"
                android:textSize="@dimen/video_content_explan_title_textSize" />
        </LinearLayout>

        <!-- 主演 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="主演: "
                android:textColor="@drawable/black_white_textcolor_style"
                android:textSize="@dimen/video_content_explan_title_textSize" />

            <TextView
                android:id="@+id/video_content_actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@drawable/gray_white_textcolor_style"
                android:textSize="@dimen/video_content_explan_title_textSize" />
        </LinearLayout>
        
        <!-- 评分 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="评分: "
                android:textColor="@drawable/black_white_textcolor_style"
                android:textSize="@dimen/video_content_explan_title_textSize" />

            <TextView
                android:id="@+id/video_content_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@drawable/gray_white_textcolor_style"
                android:textSize="@dimen/video_content_explan_title_textSize" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/arrow_marginRight"
        android:src="@drawable/arrow_icon" />

</LinearLayout>