<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
	<ImageView
        android:id="@+id/details_actor_img"
        android:layout_width="@dimen/details_actor_image_width"
        android:layout_height="@dimen/details_actor_image_height"
        android:layout_marginBottom="@dimen/details_actor_marginBottom"
        android:layout_marginLeft="@dimen/details_actor_marginLeft"
        android:layout_marginRight="@dimen/details_actor_marginRight"
        android:layout_marginTop="@dimen/details_actor_marginTop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/img_bg"
        android:scaleType="fitXY" >
        <!--   -->
    </ImageView>
        <ImageView
            android:id="@+id/details_actor_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/arrow_marginRight"
            android:src="@drawable/arrow_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/details_actor_arrow"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/details_actor_img"
            android:orientation="vertical" >

            <!-- 演员名称 -->
 		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/details_actor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/details_title_textColor"
                android:textSize="@dimen/details_more_textSize"
                android:visibility="gone"
                android:tag="black" />
            
            <TextView android:id="@+id/details_actor_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/details_subContent_textColor"
                android:textSize="@dimen/details_more_textSize"
                android:visibility="gone"
                android:tag="gray" />
		</LinearLayout>
            <TextView
                android:id="@+id/details_actor_enName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="actor english name"
                android:textColor="@color/details_title_textColor"
                android:textSize="@dimen/details_more_textSize"
                android:visibility="gone"
                android:tag="black_sec" />
        </LinearLayout>
        
        <View android:id="@+id/details_actor_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_heigh"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/details_actor_linemarginLeft"
            android:layout_marginRight="@dimen/details_actor_linemarginRight"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

